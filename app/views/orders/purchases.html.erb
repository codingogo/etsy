<h2>매입 기록</h2>
<table class="table table-striped table-bordered">
  <tr>
    <th>Image</th>
    <th>Item</th>
    <th>Price</th>
    <th>판매자</th>
    <th>판매 날짜 </th> 
  </tr>

    <% @orders.each do |order| %>
      <tr>
        <td><%= image_tag order.listing.image.url %></td>
        <td><%= order.listing.name %></td>
        <td><%= order.listing.price %></td>
        <td><%= order.seller.name %></td>
        <td><%= order.created_at.strftime("%B %-d, %Y") %></td> 
      </tr>    
    <% end %>
</table>

  <br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>